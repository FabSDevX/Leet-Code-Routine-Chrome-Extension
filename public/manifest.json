{
  "manifest_version": 3,
  "name": "LeetCode Routine",
  "version": "1.0.0",
  "description": "Reminder for daily solving a problem in LeetCode",
  "icons": {
    "128": "LeetCodeIcon64.png",
    "64": "LeetCodeIcon64.png",
    "32": "LeetCodeIcon32.png",
    "16": "LeetCodeIcon16.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions":[
    "scripting"
  ],
  "host_permissions":[
    "http://*/*",
    "https://*/*"
  ]
}
